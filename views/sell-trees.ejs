<%- include("includes/header.ejs") %>

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Sell Trees.</h1>
    <form class="user" action="/sell-forest" method="post">
        <%     message.forEach((x) => { %>

        <div class="alert alert-success" role="alert">
            <%= x  %>
        </div>

        <%          }) %>
        <h5 class = "my-1"> Left  Quantity :  <%- leftQuantity %> </h5>
      
              
            <div class=" form-group col-sm-3">

               
              
                <input type = "hidden" name ="left" value ="<%= leftQuantity  %>">
                <input type="text" class="form-control form-control-user" id="exampleFirstName" placeholder="Quantity"
                    name="quantity" required>
            </div>

            <div class="form-group col-sm-3">
                    <select name = "quality" class ="form-control">
                        <option selected>Select Quality</option>    
                        <option>A</option>
                            <option>B</option>
                            <option>C</option>
                         </select>
            </div>
            
           



       

        <div class="form-group col-sm-3">

            <input type="text" class="form-control form-control-user" id="exampleFirstName" placeholder="Price"
            name="price" required>

            

        </div>

       

        <div class = "form-group col-sm-3">
                <select name = "customer" class ="form-control">
                        <% data.forEach(customer => { %>
         
                             <option><%- customer.fullName %></option>
         
                <%         }) %>
                     </select>
        </div>



        <button type="submit" class="btn btn-primary btn-user btn-block col-sm-3">
            Submit Data
        </button>
        <hr>

    </form>

</div>
<!-- /.container-fluid -->

</div>
<!-- End of Main Content -->

<!-- Footer -->
<footer class="sticky-footer bg-white">
    <div class="container my-auto">
        <div class="copyright text-center my-auto">
            <span>Copyright &copy; Your Website 2019</span>
        </div>
    </div>
</footer>
<!-- End of Footer -->

</div>
<!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->
<%- include("includes/footer.ejs") %>